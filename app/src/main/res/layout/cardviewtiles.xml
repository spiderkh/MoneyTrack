<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="41sp"
    android:orientation="vertical"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="#ff0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/snoV"
            android:layout_width="14sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:background="@color/lightcardblue"
            android:gravity="center"
            android:text="1"
            android:textColor="#000"
            android:textSize="11sp" />

        <View
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:background="#000" />

        <TextView
            android:id="@+id/dateV"
            android:layout_width="44sp"

            android:layout_height="40sp"
            android:layout_gravity="center"
            android:background="@color/lightcardblue"
            android:gravity="center"
            android:text="02 feb" />

        <View
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:background="#000" />

        <TextView
            android:id="@+id/catgV"
            android:layout_width="54sp"

            android:layout_height="40sp"
            android:layout_gravity="center"
            android:background="@color/lightcardblue"
            android:gravity="center"

            android:text="Chicken" />

        <View
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:background="#000" />

        <TextView
            android:id="@+id/amountV"
            android:layout_width="54sp"
            android:layout_height="40sp"

            android:layout_gravity="center"
            android:background="@color/lightcardblue"
            android:gravity="center"
            android:text="999999" />

        <View
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:background="#000" />

        <TextView
            android:id="@+id/commentV"
            android:layout_width="139sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:background="@color/lightcardblue"

            android:gravity="center"
            android:text="chc 58+dhjhj +sgvgcs hc chgscchsvshsvg scs"
            android:textSize="11sp" />

        <View
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:background="#000" />

        <TextView
            android:id="@+id/userV"
            android:layout_width="14sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:background="@color/lightcardblue"
            android:gravity="center"
            android:text="B"
            android:textColor="#000"

            android:textSize="11sp" />

        <View
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:background="#000" />

        <TextView
            android:id="@+id/statusV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#B2EBF2"
            android:gravity="center"
            android:text="status"
            android:textColor="#000"
            android:textSize="8sp" />
        <TextView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/updated"
            android:visibility="gone"/>


    </LinearLayout>




</LinearLayout>